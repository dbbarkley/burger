
<div class="container">
	<div class="row">
		<div class="col-md-12 text-center" id="top-bar">
			<h1>Make a Burger!</h1>
		</div>
		<div class="col-md-6 text-center main-row" class="task">
			<div class="row">
				{{#each burger_data}}
				{{#unless this.eaten}}
				<div class="col-md-9 text-center not-eaten">
					<h5>{{this.id}}. {{this.name}}
					</h5>

				</div>
				<div class="col-md-1 text-center">
					<form class="devour-form button-size">
						<input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
						<button style="margin-top: -50px" type="submit" class="btn btn-warning">Devour!</button>
					</form>
				</div>
				{{/unless}}
				{{/each}}
			</div>
		</div>
		<div class="col-md-6 text-center main-row" class="task">
			{{#each burger_data}}
			{{#if this.eaten}}
			<input class="form-control eaten" type="text" placeholder="{{this.id}} . {{this.name}}" readonly>
			{{/if}}
			{{/each}}
		</div>
	</div>
</div>

<div class="container submit-text">
	<div class="row">
		<div class="col-md-12 text-center enter_section">
			<form action="/api/burgers" method="POST">
				<input type="text" class="form-control" name="burger_name" value="" id="enter_text">
				<button type="submit" class="btn btn-primary submit-button" id="text-enter-button">Submit</button>
			</form>
			<p>Enter a new Burger here.</p>
		</div>
	</div>
</div>